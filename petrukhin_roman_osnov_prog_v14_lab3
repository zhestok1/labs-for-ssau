#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;

void heapify(vector<int>& arr, int n, int i) {
    int largest = i; 
    int left = 2 * i + 1;
    int right = 2 * i + 2; 
    
    if (left < n && arr[left] > arr[largest])
        largest = left;
    if (right < n && arr[right] > arr[largest])
        largest = right;
    if (largest != i) {
        swap(arr[i], arr[largest]); 
        heapify(arr, n, largest);
    }
}

void heap_sort(vector<int>& arr) {
    int n = arr.size();
    for (int i = n / 2 - 1; i >= 0; i--)
        heapify(arr, n, i);
    for (int i = n - 1; i >= 0; i--) {
        swap(arr[0], arr[i]);
        heapify(arr, i, 0);
    }
}

int main() {
    bool flag = true;
    while(flag){
        int n;
        cout << "Введите количество элементов: ";
        cin >> n;

        vector<int> elements(n); 
        for (int i = 0; i < n; i++) {
            cout << "Введите элемент " << i + 1 << ": ";
            cin >> elements[i];
        }

        heap_sort(elements);
        cout << "Отсортированные элементы: ";
        for (const auto& elem : elements) {
            cout << elem << " ";
        }
        cout << endl;

        char choise;
        cout << "Хотите выйти? Жмакайте на N or n для выхода из программы, любую другую клавишу для продолжения: ";
        cin >> choise;
    if (choise == 'N' || choise == 'n') {
        flag = false;
        cout << "Конец программы!" << endl;
    }
    }
    return 0;
}
